<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /examen_S3/Projet-S3-Final/public/
    
    # If the request is for a real file or directory, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Route all other requests through index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Alternative for PHP built-in server - serve index.php for all routes
<IfModule mod_php.c>
    FallbackResource /examen_S3/Projet-S3-Final/public/index.php
</IfModule>
